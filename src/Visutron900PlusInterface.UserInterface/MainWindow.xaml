<Window x:Class="Visutron900PlusInterface.UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:Visutron900PlusInterface.UserInterface.UserControls"
        Title="MainWindow" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <userControls:SerialPortSettingsControl Grid.Column="0" x:Name="SerialPortSettingsControl" VerticalAlignment="Top"/>
        <userControls:SerialPortConnectionControl Grid.Column="0" x:Name="SerialPortConnectionControl" VerticalAlignment="Bottom"/>
        <userControls:RefraktionInputDataControl Grid.Column="2" x:Name="RefraktionInputDataControl"/>
        <userControls:RefraktionResultDataControl Grid.Column="3" x:Name="RefraktionResultDataControl"/>
    </Grid>
</Window>
